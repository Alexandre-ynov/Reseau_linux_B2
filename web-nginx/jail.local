[sshd]
enabled = true
port = ssh
filter = sshd
logpath = /var/log/auth.log
maxretry = 5
bantime = 3600
findtime = 600

[nginx-basicauth]
enabled = true
port = http,https
filter = nginx-basicauth
logpath = /var/log/nginx/access.log
          /var/log/nginx/error.log
maxretry = 5
bantime = 3600
findtime = 600
action = iptables-multiport[name=NginxBasicAuth, port="http,https", protocol="tcp"]
